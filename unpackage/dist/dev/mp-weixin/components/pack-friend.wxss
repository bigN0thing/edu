  font-size: 21rpx;
}
.pack-user-box .mid .collect-info .tag {
  background-color: #f6375b;
  color: #fff;
  padding: 1rpx 6rpx;
  margin-right: 6rpx;
}
.pack-user-box .btn-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.pack-user-box .btn-box .btn {
  border: 1rpx solid #f6375b;
  padding: 2rpx 0;
  text-align: center;
  color: #f6375b;
  font-size: 26rpx;
  -webkit-border-radius: 50%;
          border-radius: 50%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  height: 35rpx;
  width: 35rpx;
  margin-right: 10rpx;
}
.pack-user-box .btn-box .btn.del {
  color: #1296db;
  border: 1rpx solid #1296db;
}
.pack-user-box .btn-box .btn.disabled {
  background-color: #c0c0c0;
