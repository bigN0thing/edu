.pack-user-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 12rpx 20rpx;
  background-color: #fff;
}
.pack-user-box .avatar {
  height: 100rpx;
  width: 100rpx;
  -webkit-border-radius: 50%;
          border-radius: 50%;
  overflow: hidden;
  margin-right: 14rpx;
}
.pack-user-box .avatar .image {
  height: 100%;
  width: 100%;
}
.pack-user-box .mid {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  display: -webkit-box;
