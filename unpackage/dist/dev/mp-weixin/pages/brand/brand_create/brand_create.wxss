page {
  background-color: #f8f8f8;
}
.tip {
  padding: 20rpx;
  font-size: 24rpx;
}
.btn-box {
  margin-top: 60rpx;
}
.brand-create {
  background-color: #ffffff;
  padding: 20rpx;
}
.brand-create .title {
  font-size: 35rpx;
}
.brand-create .title.required:after {
  content: '*';
  color: #dd524d;
}
.brand-create .brand-name {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  margin-bottom: 20rpx;
}
.brand-create .brand-name .name {
  background-color: #C0C0C0;
  padding: 2rpx 10rpx;
  -webkit-border-radius: 15rpx;
          border-radius: 15rpx;
}
.brand-create .brand-name .del {
  color: #fff;
  background-color: #C0C0C0;
  -webkit-border-radius: 50%;
          border-radius: 50%;
  height: 50rpx;
  width: 50rpx;
  line-height: 1.6;
  text-align: center;
}
.brand-create .industry .input {
  border: 1rpx solid #333;
  padding: 2rpx 6rpx;
  min-height: 46rpx;
}
.sure-btn {
  width: 400rpx;
  font-size: 30rpx;
  background-color: #f6375b;
  color: #fff;
}

