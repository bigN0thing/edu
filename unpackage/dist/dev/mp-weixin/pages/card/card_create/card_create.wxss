page, .card-create-page {
  height: 100%;
  width: 100%;
}
.card-create-page {
  background-size: 100% auto;
  background-repeat: no-repeat;
  background-image: url(/static/card_create_bg.jpg);
}
.card-create {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding-top: 15%;
}
.card-create .title {
  font-size: 35rpx;
  color: #fff;
}
.card-create .gray {
  color: gray;
}
.card-create .avatar {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  margin: 40rpx 0 20rpx 0;
}
.card-create .form-input {
  width: 60%;
  border: 1rpx solid #ccc;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin: 40rpx auto;
  padding: 10rpx 20rpx;
  -webkit-border-radius: 40rpx;
          border-radius: 40rpx;
  background-color: #ffffff;
}
.card-create .form-input .label {
  min-width: 100rpx;
  margin: 0 10rpx;
  color: #6D6D72;
}
.card-create .form-input .form-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.card-create .form-input .timer {
  border: 1rpx solid #f6375b;
  -webkit-border-radius: 15rpx;
          border-radius: 15rpx;
  padding: 0 10rpx;
  white-space: nowrap;
  background-color: #f6375b;
  color: #fff;
  font-size: 24rpx;
}
.card-create .brand-select {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.card-create .btn-box .btn {
  width: 66%;
  font-size: 28rpx;
