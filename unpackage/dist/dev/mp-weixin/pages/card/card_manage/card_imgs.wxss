.card-imgs .i-list {
  background-color: #ffffff;
  padding: 10rpx 20rpx;
  margin-bottom: 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
}
.card-imgs .img-list {
  background-color: #ffffff;
  padding: 20rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.card-imgs .img-list .img-box {
  width: 160rpx;
  height: 160rpx;
  margin: 0 20rpx 20rpx 0;
  position: relative;
}
.card-imgs .img-list .img-box .image {
  height: 100%;
  width: 100%;
}
.card-imgs .img-list .img-box .btns {
  position: absolute;
  bottom: 0;
  left: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  background-color: rgba(0, 0, 0, 0.5);
  width: 100%;
  color: #fff;
  font-size: 26rpx;
  padding: 6rpx 0;
}
.card-imgs .img-list .img-box .btns .border {
  height: 40rpx;
  width: 1rpx;
  -webkit-transform: scale(0.5);
          transform: scale(0.5);
  background-color: #fff;
}
.card-imgs .img-list .img-box .btns .btn {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  text-align: center;
}
.card-imgs .img-list .add-btn {
  margin: 0 20rpx 20rpx 0;
}

